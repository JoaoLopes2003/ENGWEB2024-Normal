extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1= titulo

    br
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Objecto Contrato
          th Data de Celebração
          th Preço Contratual
          th NIPC Entidade Comunicante
          th Entidade Comunicante
        each c in contratos
          tr
            td
              a(href='/' + c._id)= c._id
            td= c.objectoContrato
            td= c.dataCelebracaoContrato
            td= c.precoContratual
            td
              a(href='/entidades/' + c.NIPC_entidade_comunicante)= c.NIPC_entidade_comunicante
            td= c.entidade_comunicante
    br

    footer.w3-container.w3-teal
      address Gerado por EngWeb2024 em #{data}
