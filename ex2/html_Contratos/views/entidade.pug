extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1= titulo
    
    .w3-container
      ul
        li Somatorio dos Preços Contratuais:
          |  #{somatorio}

    br
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Objecto Contrato
          th Data de Celebração
          th Preço Contratual
        each c in contratos
          tr
            td
              a(href='/' + c._id)= c._id
            td= c.objectoContrato
            td= c.dataCelebracaoContrato
            td= c.precoContratual
    br

    footer.w3-container.w3-teal
      address Gerado por EngWeb2024 em #{data} - 
        a(href='/') [Voltar]
